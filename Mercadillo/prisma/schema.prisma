generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario{

    id Int  @id @default(autoincrement())
    Nombres String  
    Apellidos String?
    UserName String  @unique
    Password String  
    Email  String  @unique
    DateCreated  DateTime @default(now())
    id_Rol Int
    roles Roles @relation(fields: [id_Rol],references: [id])
}

model Roles{

    id Int @id @default(autoincrement())
    Nombre String
    usuarios Usuario[]
    admins Admin[]
}

model Admin{

  id Int @id @default(autoincrement())
  Nombre String
  id_Rol Int
  roles Roles @relation(fields: [id_Rol],references: [id])
}