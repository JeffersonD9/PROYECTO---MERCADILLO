<!DOCTYPE html>
<html lang="es">
  <%- include('includes/header') -%>
  <body>

    <section class="bg-light ">
      <div class="container ">
        <div class="row justify-content-center align-items-center vh-100">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-5">
            <div class="card border border-light-subtle rounded-3 shadow-sm">
              <div class="card-body p-3 p-md-4 p-xl-5">
                <p class="notificacion"></p>
                <h2 class="fs-4 fw-normal text-center text-secondary mb-4">
                  Cambiar Contraseña
                </h2>
                <form  data-inicio-sesion>
                  <div class="row gy-2 overflow-hidden">
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input
                          type=""
                          class="form-control"
                          name="email"
                          id="email"
                          placeholder="name@example.com"
                          required
                        />
                        <label for="email" class="form-label">Correo Electónico</label>
                      </div>
                    </div>
                    <p class="error escondido">Verifique que el correo sea correcto</p>
                    <div class="col-12">
                      <div class="d-grid my-3">
                        <button class="btn btn-primary btn-lg btn-enviar"  type="submit">
                          Enviar
                        </button>
                      </div>
                    </div>

                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="/js/enviarEmail.js"></script>
  </body>
</html>
