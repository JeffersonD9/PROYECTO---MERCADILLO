

<div class="alert alert-danger d-none" role="alert" id="notificacion"></div>

<a id="btn-crear" type="button" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Añadir Catálogo
</a>

<div class="container-fluid my-4">
  <div class="row table-responsive">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <table class="table" id="table">
        <thead class="table-light">
          <tr class="">
            <th scope="col">#</th>
            <th scope="col">Catálogo</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% catalogos.forEach((catalogo)=>{ %>
            <td><%= catalogo.id %></td>
            <td><%= catalogo.Nombre %></td>
            <td>
              <a href="#" class="btn-actualizar-catalogo">Actualizar</a>
              <a href="#" class="btn-eliminar-catalogo">Eliminar</a>

            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>



<div class="container-fluid">
    <div
      class="modal fade"
      id="modalCrear"
      tabindex="-1"
      aria-labelledby="modalCrearLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalCrearLabel">Crear catalogo</h5>
            <p id="notificacionLlenarCampos"></p>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group" id="grupo_catalogo">
                <label for="catalogo" class="col-form-label">Catálogo:</label>
                <input type="text" class="form-control" id="catalogo" name="catalogo" />
                <p class="formulario__input-error">
                  El nombre del catálogo debe consistir únicamente en letras
                </p>
              </div>
  
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary btnModalCerrar"
                  data-bs-dismiss="modal"
                >
                  Cerrar
                </button>
                <button type="submit" class="btn btn-light">
                  Guardar Cambios
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>






<!-- Modal -->
<div
  class="modal fade"
  id="eliminarModal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="eliminarModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">
        <h1 class="modal-title fs-5" id="eliminarModalLabel"></h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btnModalCerrar" data-bs-dismiss="modal">
          Cerrar
        </button>
        <button type="button" class="btn btn-primary btnModalEliminar">
          Eliminar
        </button>
      </div>
    </div>
  </div>
</div>


<script src="/js/catalogo.js" type="module"></script>
