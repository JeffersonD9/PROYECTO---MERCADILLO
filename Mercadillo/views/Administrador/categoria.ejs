
<div class="" style="width: 100%; height: 70px;" >
  <div class="alert alert-danger d-none" id="notificacion" role="alert" ></div>

</div>

<a id="btn-crear" type="button" class="btn btn-primary" >
  <i class="bi bi-plus-lg"></i> Añadir Categoría
</a>

<div class="container-fluid my-4 ">
  <div class="row ">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <table class="table " id="table">
        <thead class="table-light">
          <tr>
            <th class="col">#</th>
            <th class="col">Categoría</th>
            <th class="col">Catálogo</th>
            <th class="col-3">Acción</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% categoriasConCatalogo.forEach((categoria)=>{ %>
            <td><%= categoria.id %></td>
            <td><%= categoria.Nombre %></td>
            <td><%= categoria.catalogos.Nombre %></td>
            <td>
              <a href="#" class="btn-eliminar-usuario">Eliminar</a>
              <a href="#" class="btn-actualizar-usuario">Actualizar</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <div
    class="modal fade"
    id="modalCrear"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="modalCrearLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalCrearLabel">Crear Categoría</h5>
          <p id="notificacionLlenarCampos"></p>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group" id="grupocategoria">
              <label for="categoria" class="col-form-label">Categoría:</label>
              <input type="text" class="form-control" id="categoria" name="categoria" />
              <p class="formulario__input-error">
                El nombre de la categoría debe consistir únicamente en letras y
                tener una longitud máxima de 30 caracteres
              </p>
            </div>
            <div class="form-group " id="grupocatalogo">
              <label for="catalogo" class="col-form-label">Catálogo:</label>
              <p class="formulario__input-error">
                Debe seleccionar un Catálogo
              </p>
              <select class="form-control select-catalogo" id="catalogo" name="catalogo">
                <option value="" selected>Seleccionar</option>
                <% catalogos.forEach((catalogo)=>{ %>
                <option value="<%= catalogo.id%>"><%=catalogo.Nombre %></option>
                <% }); %>
              </select>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary btnModalCrearCerrar"
                data-bs-dismiss="modal"
              >
                Cerrar
              </button>
              <button type="submit" class="btn btn-light">
                Guardar Cambios
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


<!-- Modal -->
<div
  class="modal fade"
  id="eliminarModal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="eliminarModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
       
      </div>
      <div class="modal-body">
        <h1 class="modal-title fs-5" id="eliminarModalLabel"></h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btnModalEliminarCerrar" data-bs-dismiss="modal">
          Cerrar
        </button>
        <button type="button" class="btn btn-primary btnModalEliminar">
          Eliminar
        </button>
      </div>
    </div>
  </div>
</div>





 








